{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "outDir": "../dist-electron",
        "rootDir": "../src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "../src/main/**/*",
        "../src/shared/**/*",
        "../src/preload/**/*",
        "../src/workers/main/**/*"
    ]
}
