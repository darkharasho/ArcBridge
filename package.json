{
    "name": "gw2-arc-log-uploader",
    "private": true,
    "version": "1.1.1",
    "description": "Guild Wars 2 arcDPS Log Uploader",
    "author": {
        "name": "darkharasho",
        "email": "mstephens@example.com"
    },
    "main": "dist-electron/main/index.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:electron\" \"npm run dev:react\"",
        "dev:react": "vite",
        "dev:electron": "wait-on tcp:5173 && tsc -p electron/tsconfig.json && electron .",
        "build": "tsc && vite build && tsc -p electron/tsconfig.json",
        "build:linux": "npm run build && electron-builder --linux",
        "build:win": "npm run build && electron-builder --win",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview"
    },
    "dependencies": {
        "axios": "^1.6.0",
        "chokidar": "^3.5.3",
        "clsx": "^2.0.0",
        "electron-log": "^5.4.3",
        "electron-store": "^8.1.0",
        "electron-updater": "^6.7.3",
        "form-data": "^4.0.5",
        "framer-motion": "^10.16.4",
        "html-to-image": "^1.11.13",
        "lucide-react": "^0.292.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^7.12.0",
        "recharts": "^3.6.0",
        "tailwind-merge": "^2.0.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.1",
        "@types/node": "^20.9.0",
        "@types/react": "^18.2.37",
        "@types/react-dom": "^18.2.15",
        "@typescript-eslint/eslint-plugin": "^6.10.0",
        "@typescript-eslint/parser": "^6.10.0",
        "@vitejs/plugin-react": "^4.2.0",
        "autoprefixer": "^10.4.16",
        "concurrently": "^8.2.2",
        "electron": "^27.1.0",
        "electron-builder": "^24.9.1",
        "eslint": "^8.53.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.4",
        "jsdom": "^27.4.0",
        "postcss": "^8.4.31",
        "tailwindcss": "^3.3.5",
        "typescript": "^5.2.2",
        "vite": "^5.0.0",
        "vitest": "^4.0.17",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.gw2.arc.uploader",
        "productName": "GW2 Arc Log Uploader",
        "directories": {
            "output": "dist_out"
        },
        "publish": {
            "provider": "github",
            "owner": "darkharasho",
            "repo": "gw2_arc_log_uploader"
        },
        "files": [
            "dist-electron/**/*",
            "dist-react/**/*",
            "package.json"
        ],
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "category": "Utility",
            "icon": "public/img/logo.png"
        },
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "public/img/logo.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}