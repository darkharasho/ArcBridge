{
    "name": "arcbridge",
    "private": true,
    "version": "1.29.0",
    "description": "ArcBridge - Guild Wars 2 arcDPS Log Uploader",
    "author": {
        "name": "darkharasho",
        "email": "mstephens@example.com"
    },
    "license": "GPL-3.0-only",
    "main": "dist-electron/main/index.js",
    "scripts": {
        "sync:metrics-spec": "node scripts/sync-metrics-spec.mjs",
        "dev": "concurrently \"npm run dev:electron\" \"npm run dev:react\"",
        "dev:react": "NODE_OPTIONS=--max-old-space-size=6144 vite",
        "dev:electron": "NODE_OPTIONS=--max-old-space-size=6144 wait-on tcp:5173 && tsc -p electron/tsconfig.json && electron .",
        "clean": "rm -rf dist-electron dist-react dist-web dist_out",
        "build": "npm run clean && npm run sync:metrics-spec && NODE_OPTIONS=--max-old-space-size=6144 tsc && NODE_OPTIONS=--max-old-space-size=6144 vite build && NODE_OPTIONS=--max-old-space-size=6144 vite build --config vite.web.config.ts && NODE_OPTIONS=--max-old-space-size=6144 tsc -p electron/tsconfig.json",
        "typecheck": "tsc --noEmit && tsc -p electron/tsconfig.json --noEmit",
        "validate": "npm run typecheck && npm run lint",
        "build:web": "npm run sync:metrics-spec && NODE_OPTIONS=--max-old-space-size=6144 vite build --config vite.web.config.ts",
        "build:linux": "npm run build && electron-builder --linux",
        "build:win": "npm run build && electron-builder --win",
        "build:all": "npm run build && electron-builder --linux --win",
        "build:qa:win": "npm run build && electron-builder --win zip",
        "build:github": "node scripts/build-github.mjs",
        "generate:release-notes": "node scripts/generate-release-notes.mjs",
        "dev:fake-first-time": "node scripts/fake-first-time.mjs",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview",
        "dev:web": "vite --config vite.web.config.ts --host 127.0.0.1 --port 4173",
        "fixture:json": "bash scripts/generate-json-fixture.sh",
        "audit:boons": "node scripts/boon-validate.js",
        "audit:metrics": "node scripts/metrics-audit.mjs --all",
        "audit:conditions": "node scripts/conditions-audit.mjs --all",
        "audit:conditions:consistency": "node scripts/conditions-consistency.mjs --dir test-fixtures/boon --mode hosted",
        "audit": "npm run audit:boons && npm run audit:metrics && npm run audit:conditions && npm run audit:conditions:consistency",
        "generate:conditions": "node scripts/conditions-audit.mjs --all --out test-fixtures/conditions",
        "generate:metrics": "node scripts/metrics-audit.mjs --all --out test-fixtures/metrics",
        "generate:fixtures": "for f in testdata/*.zevtc; do bash scripts/generate-json-fixture.sh \"$f\"; done",
        "build:electron:test": "vite build && tsc -p electron/tsconfig.json",
        "test:unit": "vitest run",
        "test:unit:watch": "vitest",
        "test:e2e:web": "playwright test --config playwright.web.config.ts",
        "pretest:e2e:electron": "npm run build:electron:test",
        "test:e2e:electron": "playwright test --config playwright.electron.config.ts",
        "test:all": "npm run test:unit && npm run test:e2e:web && npm run test:e2e:electron",
        "ci:local": "npm run audit:boons && npm run audit:metrics && npm run audit:conditions:consistency && npm run test:unit && npm run test:e2e:web && npm run test:e2e:electron"
    },
    "dependencies": {
        "adm-zip": "^0.5.16",
        "axios": "^1.6.0",
        "chokidar": "^3.5.3",
        "clsx": "^2.0.0",
        "electron-log": "^5.4.3",
        "electron-store": "^8.1.0",
        "electron-updater": "^6.7.3",
        "form-data": "^4.0.5",
        "framer-motion": "^10.16.4",
        "html-to-image": "^1.11.13",
        "lucide-react": "^0.292.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-markdown": "^9.0.1",
        "react-router-dom": "^7.12.0",
        "recharts": "^3.6.0",
        "remark-gfm": "^4.0.0",
        "remark-parse": "^11.0.0",
        "tailwind-merge": "^2.0.0",
        "unified": "^11.0.5",
        "unist-util-visit": "^5.1.0"
    },
    "devDependencies": {
        "@playwright/test": "^1.52.0",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.1",
        "@testing-library/user-event": "^14.5.2",
        "@types/node": "^20.9.0",
        "@types/react": "^18.2.37",
        "@types/react-dom": "^18.2.15",
        "@typescript-eslint/eslint-plugin": "^6.10.0",
        "@typescript-eslint/parser": "^6.10.0",
        "@vitejs/plugin-react": "^4.2.0",
        "autoprefixer": "^10.4.16",
        "concurrently": "^8.2.2",
        "electron": "^27.1.0",
        "electron-builder": "^24.9.1",
        "eslint": "^8.53.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.4",
        "jsdom": "^27.4.0",
        "postcss": "^8.4.31",
        "tailwindcss": "^3.3.5",
        "typescript": "^5.2.2",
        "vite": "^5.0.0",
        "vitest": "^4.0.17",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.arcbridge.app",
        "productName": "ArcBridge",
        "directories": {
            "output": "dist_out"
        },
        "artifactName": "ArcBridge-${version}.${ext}",
        "publish": {
            "provider": "github",
            "owner": "darkharasho",
            "repo": "ArcBridge",
            "releaseType": "draft"
        },
        "files": [
            "dist-electron/**/*",
            "dist-react/**/*",
            "dist-web/**/*",
            "COPYRIGHT",
            "LICENSE",
            "package.json",
            "RELEASE_NOTES.md",
            "THIRD_PARTY_NOTICES.md"
        ],
        "linux": {
            "artifactName": "ArcBridge-${version}.${ext}",
            "target": [
                "AppImage"
            ],
            "category": "Utility",
            "icon": "public/img/ArcBridgeAppIcon.png"
        },
        "win": {
            "artifactName": "ArcBridge-${version}-Setup.${ext}",
            "target": [
                "nsis"
            ],
            "icon": "public/img/ArcBridgeAppIcon.png"
        },
        "nsis": {
            "oneClick": true,
            "allowToChangeInstallationDirectory": false,
            "differentialPackage": true
        }
    }
}
